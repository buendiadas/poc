{
  "name": "example",
  "version": "0.0.23",
  "private": true,
  "scripts": {
    "clean": "rimraf build coverage",
    "compile": "waffle compile",
    "codegen": "crestproject codegen \"build/**.json\" tests/contracts",
    "build": "yarn compile && yarn codegen",
    "format": "prettier --write {tests,contracts}/{*,**/*}.{ts,sol}",
    "lint": "prettier --list-different {tests,contracts}/{*,**/*}.{ts,sol}",
    "test": "jest",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.23",
    "@nomiclabs/buidler": "^1.3.8",
    "@openzeppelin/contracts": "^3.1.0",
    "ethereum-waffle": "^3.0.2",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.54",
    "ts-jest": "^26.1.2"
  },
  "jest": {
    "preset": "@crestproject/crestproject",
    "roots": [
      "<rootDir>/tests"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    }
  }
}
