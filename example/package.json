{
  "name": "@crestproject/example",
  "version": "0.0.61",
  "private": true,
  "scripts": {
    "prepare": "yarn build",
    "compile": "hardhat compile",
    "codegen": "crestproject codegen \"artifacts/contracts/**/!(*.dbg).json\" tests/contracts",
    "build": "yarn compile && yarn codegen",
    "test": "jest",
    "lint": "tsdx lint src tests --ignore-pattern tests/contracts/**/*.ts",
    "format": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.61",
    "@crestproject/ganache": "^0.0.61",
    "@crestproject/hardhat": "^0.0.61",
    "@openzeppelin/contracts": "^3.2.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "resolutions": {
    "@typescript-eslint/parser": "^4.1.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
