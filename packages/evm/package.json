{
  "name": "@crestproject/evm",
  "version": "0.0.12",
  "description": "Opinionated utilities for interacting with and testing ethereum smart contracts.",
  "license": "MIT",
  "homepage": "https://github.com/crestproject",
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crestproject/poc"
  },
  "bugs": {
    "url": "https://github.com/crestproject/poc/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist coverage",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.json",
    "postbuild": "cp package.json ../../LICENSE ../../README.md dist",
    "watch": "yarn build --watch",
    "format": "prettier --write src/{*,**/*}.{ts,sol}",
    "lint": "yarn prettier --list-different src/{*,**/*}.{ts,sol}",
    "test": "jest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "preversion": "yarn typecheck && yarn lint && yarn build",
    "postversion": "cp package.json dist"
  },
  "devDependencies": {
    "@crestproject/ethers": "^0.0.12",
    "@nomiclabs/buidler": "^1.3.8",
    "ethers": "^5.0.5"
  },
  "peerDependencies": {
    "@nomiclabs/buidler": "^1.3.8",
    "ethers": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ]
  }
}
