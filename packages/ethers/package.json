{
  "name": "@crestproject/ethers",
  "version": "0.0.61",
  "description": "Opinionated utilities for interacting with and testing ethereum smart contracts.",
  "license": "MIT",
  "homepage": "https://github.com/crestproject",
  "main": "dist/index.js",
  "module": "dist/ethers.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crestproject/poc"
  },
  "bugs": {
    "url": "https://github.com/crestproject/poc/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "scripts": {
    "prepare": "yarn build",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src tests --ignore-pattern tests/contracts/**/*.ts",
    "format": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@crestproject/artifactory": "^0.0.61",
    "eslint-plugin-prettier": "3.1.4",
    "ethers": "^5.0.18",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "peerDeependencies": {
    "ethers": "^5.0.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
