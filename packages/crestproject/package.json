{
  "name": "@crestproject/crestproject",
  "version": "0.0.5",
  "description": "Opinionated utilities for interacting with and testing ethereum smart contracts.",
  "license": "MIT",
  "homepage": "https://github.com/crestproject",
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crestproject/poc"
  },
  "bugs": {
    "url": "https://github.com/crestproject/poc/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "main": "index.js",
  "browser": "browser.js",
  "bin": {
    "crestproject": "cli.js"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "cli": "ts-node src/cli",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.json",
    "postbuild": "cp package.json ../../LICENSE ../../README.md dist && chmod +x dist/cli.js",
    "watch": "yarn build --watch",
    "format": "prettier --write src/{*,**/*}.{ts,sol}",
    "lint": "prettier --list-different src/{*,**/*}.{ts,sol}",
    "test": "jest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "preversion": "yarn typecheck && yarn lint && yarn build",
    "postversion": "cp package.json dist"
  },
  "dependencies": {
    "@crestproject/codegen": "^0.0.5",
    "@crestproject/ethers": "^0.0.5",
    "@crestproject/evm": "^0.0.5",
    "@crestproject/jest": "^0.0.5",
    "glob": "^7.1.6",
    "jest-worker": "^26.1.0",
    "throat": "^5.0.0",
    "yargs": "^15.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ]
  }
}
