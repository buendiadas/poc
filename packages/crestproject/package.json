{
  "name": "@crestproject/crestproject",
  "version": "0.0.44",
  "description": "Opinionated utilities for interacting with and testing ethereum smart contracts.",
  "license": "MIT",
  "homepage": "https://github.com/crestproject",
  "files": [
    "dist",
    "src",
    "jest-preset.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crestproject/poc"
  },
  "bugs": {
    "url": "https://github.com/crestproject/poc/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "bin": {
    "crestproject": "bin/index.js"
  },
  "scripts": {
    "prepare": "yarn build",
    "start": "tsdx watch",
    "build": "tsdx build && tsc --project tsconfig.cli.json && chmod +x bin/index.js",
    "test": "tsdx test",
    "lint": "tsdx lint src tests --ignore-pattern src/contracts/**/*.ts",
    "format": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@crestproject/codegen": "^0.0.44",
    "@crestproject/ethers": "^0.0.44",
    "@crestproject/evm": "^0.0.44",
    "@crestproject/jest": "^0.0.44",
    "glob": "^7.1.6",
    "jest-worker": "^26.1.0",
    "throat": "^5.0.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.4",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
