{
  "name": "@crestproject/hardhat",
  "version": "0.0.64",
  "description": "Opinionated utilities for interacting with and testing ethereum smart contracts.",
  "license": "MIT",
  "homepage": "https://github.com/crestproject",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "jest-preset.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crestproject/poc"
  },
  "bugs": {
    "url": "https://github.com/crestproject/poc/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>"
  ],
  "scripts": {
    "prepare": "yarn build",
    "start": "tsdx watch",
    "build": "tsdx build --target node --format cjs && tsc --project tsconfig.preset.json",
    "test": "tsdx test",
    "lint": "tsdx lint src tests --ignore-pattern tests/contracts/**/*.ts",
    "format": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@crestproject/ethers": "^0.0.64",
    "@crestproject/evm": "^0.0.64"
  },
  "devDependencies": {
    "@crestproject/artifactory": "^0.0.64",
    "eslint-plugin-prettier": "3.1.4",
    "ethers": "^5.0.19",
    "hardhat": "^2.0.2",
    "prettier": "^2.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "ethers": "^5.0.18",
    "hardhat": "^2.0.0"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
