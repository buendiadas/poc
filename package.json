{
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap && lerna link",
    "test": "lerna run test",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "typecheck": "lerna run typecheck",
    "build": "lerna run build",
    "watch": "lerna run watch --stream",
    "publish:local": "lerna publish from-package --force-publish --no-commit-hooks --no-git-tag-version --no-push --dist-tag=latest --registry=http://localhost:4873/",
    "local-unpublish": "lerna exec -- npm unpublish --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}\" --force",
    "local-unpublish-all": "lerna exec -- npm unpublish -f --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}\""
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.22",
    "cross-env": "^7.0.2",
    "ethers": "^5.0.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.54",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.0-beta"
  }
}
