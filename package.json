{
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap && lerna link",
    "test": "lerna run test",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "typecheck": "lerna run typecheck",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "watch": "lerna run watch --stream",
    "local-publish": "lerna publish from-package --yes --force-publish --no-commit-hooks --no-git-tag-version --no-push --dist-tag=latest --registry=http://localhost:4873/",
    "local-unpublish": "lerna exec -- npm unpublish --force --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}\"",
    "github-publish": "lerna publish from-package --registry=https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "resolutions": {
    "@typescript-eslint/parser": "^4.1.0",
    "typescript": "^4.0.5",
    "tslib": "^2.0.3",
    "yargs": "^16.1.0"
  }
}
